@model LezzetYolculugu.Models.AdminCreateUserViewModel

@{
    ViewData["Title"] = "CreateUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (ViewData["Error"] != null)
{
    <p class="text-danger" id="error-message">@ViewData["Error"]</p>
}
<div class="text-center">
    <h1 class="display-4">Yeni Kullanıcı</h1>
    <div class="col-md-6 offset-md-3"><hr /><br /></div>
    <form asp-action="CreateUser">
        <div class="form-group row">
            <label class="col-md-1 offset-md-4 text-right" asp-for="Name"></label>
            <div class="col-md-3">
                <input class="form-control" asp-for="Name" type="text" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-1 offset-md-4 text-right" asp-for="Surname"></label>
            <div class="col-md-3">
                <input class="form-control" asp-for="Surname" type="text" required />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-1 offset-md-4 text-right" asp-for="Email"></label>
            <div class="col-md-3">
                <input class="form-control" asp-for="Email" type="email" required />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-1 offset-md-4 text-right" asp-for="Password"></label>
            <div class="col-md-3">
                <input class="form-control" asp-for="Password" type="password" required />
            </div>
        </div>
        <div class="form-group form-check">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="IsAdmin" /> @Html.DisplayNameFor(model => model.IsAdmin)
            </label>
        </div>
        <div class="form-group">
            <div class="col-md-2 offset-md-5">
                <button type="submit" class="form-control btn-outline-success">Oluştur</button>
            </div>
        </div>
    </form>
</div>

<div>
    <a asp-action="Index">Admin anasayfasına dön</a>
</div>

@section  Scripts {
    <script>
        $(document).ready(function(){
            $('#Email').focus(function () {
                $('#error-message').attr('hidden', true);
            });
        });
    </script>
}