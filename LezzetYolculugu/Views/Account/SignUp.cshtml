@model User
@{
    ViewData["Title"] = "SignUp";
}

@if (ViewData["Error"] != null)
{
    <p class="text-danger" id="message">@ViewData["Error"]</p>
}

<div class="text-center">
    <h1 class="display-4">Sign Up</h1>
    <div class="col-md-6 offset-md-3"><hr /><br /></div>
    <form asp-controller="Account" asp-action="SignUp" method="post">
        <div class="form-group row">
            <label class="col-md-1 offset-md-4 text-right" asp-for="Name">Ad</label>
            <div class="col-md-3">
                <input class="form-control" asp-for="Name" type="text" required />
            </div>
            <div class="col-md-4 text-left">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-1 offset-md-4 text-right" asp-for="Surname">Soyad</label>
            <div class="col-md-3"><input class="form-control" asp-for="Surname" type="text" required /></div>
            <div class="col-md-4 text-left">
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-1 offset-md-4 text-right" asp-for="Email">Eposta</label>
            <div class="col-md-3"><input class="form-control" asp-for="Email" type="email" required /></div>
            <div class="col-md-4 text-left">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-1 offset-md-4 text-right" asp-for="Password">Şifre</label>
            <div class="col-md-3"><input class="form-control" asp-for="Password" type="password" required /></div>
            <div class="col-md-4 text-left">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2 offset-md-5">
                <button type="submit" class="form-control btn-outline-success">Sign Up</button>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('input').focus(function (e) {
                if (e.target.id === 'Password' || e.target.id === 'Email' || e.target.id === 'Name' || e.target.id === 'Surname') {
                    $('#message').attr('hidden', true);
                }
            })
        });
    </script>
}