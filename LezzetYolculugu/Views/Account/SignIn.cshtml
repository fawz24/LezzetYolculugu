@model SignInViewModel
@{
    ViewData["Title"] = "SignIn";
}

@if (ViewData["Error"] != null)
{
    <p class="text-danger" id="message">@ViewData["Error"]</p>
}

<div class="text-center">
    <h1 class="display-4">Sign In</h1>
    <div class="col-md-6 offset-md-3"><hr /><br /></div>
    @{ Dictionary<string, string> routeParams = new Dictionary<string, string>() { { "ReturnUrl", ViewData["ReturnUrl"].ToString() } };}
    <form asp-controller="Account" asp-action="SignIn" asp-all-route-data="routeParams" method="post">
        <div class="form-group row">
            <label class="col-md-1 offset-md-4 text-right" asp-for="Email">Eposta</label>
            <div class="col-md-3"><input class="form-control" asp-for="Email" type="email" required /></div>
        </div>
        <div class="form-group row">
            <label class="col-md-1 offset-md-4 text-right" asp-for="Password">Şifre</label>
            <div class="col-md-3"><input class="form-control" asp-for="Password" type="password" required /></div>
        </div>
        <div class="form-group">
            <div class="col-md-2 offset-md-5">
                <button type="submit" class="form-control btn-outline-success">Sign In</button>
            </div>
        </div>
    </form>
</div>

@section Scripts{ 
    <script>
        $(document).ready(function () {
            $('input').focus(function (e) {
                if (e.target.id === 'Password' || e.target.id === 'Email') {
                    $('#message').attr('hidden', true);
                }
            })
        });
    </script>
}